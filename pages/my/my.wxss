/* pages/my/my.wxss */
.me_container {
  position: fixed;
  background-color: #efeff4;
  width: 100%;
  height: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-top: 144rpx;
  padding-bottom: 80rpx;
}

.userinfo image {
  width: 196rpx;
  height: 196rpx;
  border-style: solid;
  border-radius: 50%;
  border-width: 4rpx;
  border-color: white;
}

.userinfo text {
  font-size: 14px;
  margin-top: 20rpx;
  color: #7f8389;
}

.menu {
  background-color: white;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.menu_hover {
  background-color: #efefef;
}

.menu image {
  width: 52rpx;
  height: 52rpx;
  margin-left: 30rpx;
}

.menu text {
  color: #333333;
  margin-left: 20rpx;
  flex: auto;
  font-size: 17px;
  font-weight: normal;
  border-style: solid;
  border-width: 0 0 1rpx 0;
  border-bottom-color: #eee;
  box-sizing: border-box;
}

.menu_hover text {
  border-bottom-color: #efefef
}